{
  "name": "srag/librarylanguageinstaller",
  "description": "Install additional and external lang files for a plugin",
  "version": "1.1.2",
  "extra": {
    "ilias_plugin": {
      "ilias_min_version": "5.4.0",
      "ilias_max_version": "6.999"
    },
    "generate_plugin_readme_template": "SRAG_ILIAS_LIBRARY"
  },
  "type": "library",
  "keywords": [
    "ILIAS",
    "Installer",
    "Language",
    "Library"
  ],
  "homepage": "https://github.com/studer-raimann/LibraryLanguageInstaller",
  "license": "GPL-3.0-only",
  "authors": [
    {
      "name": "studer + raimann ag - Team Custom 1",
      "email": "support-custom1@studer-raimann.ch",
      "homepage": "https://studer-raimann.ch",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://plugins.studer-raimann.ch/goto.php?target=uihk_srsu_LLANGINST"
  },
  "require": {
    "php": ">=7.0",
    "srag/dic": ">=0.1.0"
  },
  "require-dev": {
    "srag/generateplugininfoshelper": ">=0.1.0"
  },
  "autoload": {
    "psr-4": {
      "srag\\LibraryLanguageInstaller\\DhbwTraining\\": "src/"
    }
  },
  "config": {
    "classmap-authoritative": true,
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "generate-plugin-readme": [
      "srag\\GeneratePluginInfosHelper\\GeneratePluginReadme::generatePluginReadme"
    ]
  }
}